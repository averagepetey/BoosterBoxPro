# BoosterBoxPro - Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
# Format: postgresql+asyncpg://username:password@host:port/database_name
# For local PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/boosterboxpro
# For cloud services (Supabase, Neon, etc.), use the connection string they provide

DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/boosterboxpro

# Application Settings
ENVIRONMENT=development
DEBUG=True

# Admin API Key (for manual entry endpoints - simple auth for now)
ADMIN_API_KEY=your-secret-api-key-here

# Daily refresh cache invalidation: set same value as GitHub Actions secret INVALIDATE_CACHE_SECRET
# so when the refresh completes it can call POST /admin/invalidate-cache and leaderboard/box detail update immediately
# INVALIDATE_CACHE_SECRET=your-invalidate-secret-here

# Future: API Keys for marketplace integrations
# TCGPLAYER_API_KEY=
# EBAY_API_KEY=

