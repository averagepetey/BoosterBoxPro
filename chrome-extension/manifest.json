{
  "manifest_version": 3,
  "name": "BoosterBoxPro - Market Intelligence",
  "version": "1.0.0",
  "description": "See real-time One Piece TCG booster box market data on TCGplayer. Box detail view matches the BoosterBoxPro dashboard.",
  "author": "BoosterBoxPro",
  "homepage_url": "https://booster-box-pro.vercel.app",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.tcgplayer.com/*",
    "https://tcgplayer.com/*",
    "https://www.ebay.com/*",
    "https://ebay.com/*",
    "https://boosterboxpro.onrender.com/*",
    "https://*.onrender.com/*",
    "https://us.i.posthog.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.tcgplayer.com/*",
        "https://tcgplayer.com/*",
        "https://*.ebay.com/*",
        "https://ebay.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/panel.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "icons/logo.png"],
      "matches": ["https://*.tcgplayer.com/*", "https://*.ebay.com/*"]
    }
  ]
}
